<!-- main view -->

<%- include partials/header.ejs%>
<%- include partials/homenavbar.ejs%>

<body>
    <div class="container">                     <!-- bootstrap container -->
        <hr>
        <div class="jumbotron">                 <!-- Bootstrap jumbotron -->
            <h1 class="display-4">Welcome!</h1>
            <p class="lead">This is a simple blog with efects to demonstrate the use of node.js.</p>
            <hr class="my-4">
            <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h4><%= article.title %></h4>
                </div>
                <div class="card-body">
                    <!-- using an EJS variable to refers the route with the parameter to find the article -->
                    <a href="/<%= article.slug %>" class="btn btn-success">Read article</a>
                </div>
            </div><br>    
        <% }) %>
    </div>
</body>
<%- include partials/footer.ejs%>
